#include <stdio.h>
#include <string.h>
#include <ctype.h>

#define MAX 100
char stack[MAX]; 
int top = -1;

void push(char c){ stack[++top] = c; }
char pop(){ return stack[top--]; }

int prec(char c){
    if(c=='^') return 3;
    if(c=='*'||c=='/') return 2;
    if(c=='+'||c=='-') return 1;
    return 0;
}

void infixToPostfix(char infix[]){
    char post[MAX]; int j=0;
    for(int i=0; i<strlen(infix); i++){
        char c=infix[i];
        if(isalnum(c)) post[j++]=c;
        else if(c=='(') push(c);
        else if(c==')'){
            while(stack[top]!='(') post[j++]=pop();
            pop();
        } else {
            while(top!=-1 && prec(stack[top])>=prec(c))
                post[j++]=pop();
            push(c);
        }
    }
    while(top!=-1) post[j++]=pop();
    post[j]='\0';
    printf("Postfix: %s\n",post);
}

int main(){
    char infix[MAX];
    printf("Enter Infix: ");
    scanf("%s",infix);
    infixToPostfix(infix);
    return 0;
}
